<div class="row">
    <div class="col-md-12">
        <h2>Add Category</h2>
        <hr />
        <form method="post" action="/categories/add">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="category">Category:</label>
                        <input type="text" class="form-control" name="category" id="category" autofocus required />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary pull-right">Add Category</button>
                        <button type="reset" class="btn btn-warning pull-left">Reset</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>