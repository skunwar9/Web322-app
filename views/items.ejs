<div class="row">
    <div class="col-md-12">
        <h2>
            Items
            <a href="/items/add" class="btn btn-success pull-right">Add Item</a>
        </h2>
        <hr />

        <% if (typeof items !=='undefined' && items.length> 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Post Date</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Published</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= item.id %>
                                </td>
                                <td>
                                    <%= item.title %>
                                </td>
                                <td>
                                    <%= formatDate(item.postDate) %>
                                </td>
                                <td>$<%= item.price %>
                                </td>
                                <td><a href="/items?category=<%= item.category %>">
                                        <%= item.category %>
                                    </a></td>
                                <td>
                                    <%= item.published ? 'Yes' : 'No' %>
                                </td>
                                <td>
                                    <a href="/items/delete/<%= item.id %>" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this item?');">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else if (typeof message !=='undefined' ) { %>
                <div class="col-md-12 text-center">
                    <strong>
                        <%= message %>
                    </strong>
                </div>
                <% } else { %>
                    <div class="col-md-12 text-center">
                        <strong>No items available.</strong>
                    </div>
                    <% } %>
    </div>
</div>